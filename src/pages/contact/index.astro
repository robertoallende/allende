---
import Base from '../../layouts/Base.astro';
import { getCollection } from 'astro:content';

// Get all portfolio content and find contact
const portfolioContent = await getCollection('portfolio');
const contactContent = portfolioContent.find(entry => entry.data.section === 'contact');

if (!contactContent) {
  throw new Error('Contact content not found');
}

const { Content } = await contactContent.render();
---

<Base title={contactContent.data.title} description={contactContent.data.description}>
  <main class="mx-auto max-w-4xl px-6 py-12">
    <Content />
  </main>
</Base>
