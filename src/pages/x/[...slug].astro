---
import Base from '../../layouts/Base.astro';
import { getCollection, getEntry } from 'astro:content';

export async function getStaticPaths() {
  const xContent = await getCollection('x');
  
  return xContent.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Base title={entry.data.title} description={entry.data.description || `Hidden content: ${entry.data.title}`}>
  <main class="mx-auto max-w-4xl px-6 py-12">
    <!-- Page Title -->
    <h1 class="text-4xl font-bold mb-8">{entry.data.title}</h1>
    
    <!-- Content with basic prose styling -->
    <div class="prose dark:prose-invert max-w-none">
      <Content />
    </div>
  </main>
</Base>
