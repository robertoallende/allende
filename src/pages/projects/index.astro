---
import Base from "../../layouts/Base.astro";
import { getCollection } from 'astro:content';

// Get all portfolio content and find projects
const portfolioContent = await getCollection('portfolio');
const projectsContent = portfolioContent.find(entry => entry.data.section === 'projects');

if (!projectsContent) {
  throw new Error('Projects content not found');
}

const { Content } = await projectsContent.render();

const title = "Projects";
const description = "Software development projects, methodologies, and creative work";
---

<Base title={title} description={description}>
  <section class="prose prose-neutral dark:prose-invert max-w-none">
    <Content />
  </section>
</Base>
